@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori</th>
        
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.CategoryID</td>
                    <td>@x.CategoryName</td>
                    
                    @*DeleteCategory ye gönderiyoruz yönlendirme ile giderkende Id yide götürnesini sağlıyoruz.*@
                    <td><a href="/AdminCategory/DeleteCategory/@x.CategoryID" class="btn btn-danger">Sil</a></td>
                    
                   @*Güncelle butonuna basınca UpdateCategory Sayfasına gidiyor*@
                    <td><a href="/AdminCategory/UpdateCategory/@x.CategoryID" class="btn btn-warning">Güncelle</a></td>
                    
                    <td><a href="#" class="btn btn-primary">Başlıklar</a></td>

                </tr>
            }
</table>
<a href=" /AdminCategory/AddCategory" class="btn btn-success">Yeni Kategori</a>



