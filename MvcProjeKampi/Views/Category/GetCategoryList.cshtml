@using EntityLayer.Concrete     
@model List<Category>



@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Durum</th>
    </tr>
    
    @foreach(var listele in Model)
            {
                <tr>
                    <td>@listele.CategoryID</td>
                    <td>@listele.CategoryName</td>
                    <td>@listele.CategoryStatus</td>
                </tr>
            }

</table>
<br/>
<a  href=" /Category/AddCategory" class="btn btn-success">Yeni Kategori</a>    <!--AddCategory methoduna Yönlendirme işlemi yapıyoruz-->
